---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contact Us - VapeIndex">
  <Header />

  <main class="main-content">
    <div class="contact-container">
      <div class="page-header">
        <h1>üìß Contact Us</h1>
        <p>Get in touch with the VapeIndex team</p>
      </div>

      <div class="contact-grid">
        <div class="contact-form-section">
          <h2>Send us a message</h2>
          <form class="contact-form">
            <div class="form-group">
              <label for="name">Name *</label>
              <input type="text" id="name" name="name" required placeholder="Your name" />
            </div>

            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required placeholder="your@email.com" />
            </div>

            <div class="form-group">
              <label for="subject">Subject *</label>
              <select id="subject" name="subject" required>
                <option value="">Choose a topic...</option>
                <option value="report">Report a Problem</option>
                <option value="suggestion">Suggestion/Feedback</option>
                <option value="moderation">Moderation Issue</option>
                <option value="account">Account Help</option>
                <option value="verification">Product Verification</option>
                <option value="partnership">Partnership Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" required rows="8" placeholder="Tell us more..."></textarea>
            </div>

            <button type="submit" class="submit-btn">Send Message</button>
          </form>
        </div>

        <div class="contact-info-section">
          <h2>Other Ways to Reach Us</h2>

          <div class="contact-methods">
            <div class="contact-method">
              <div class="method-icon">üí¨</div>
              <div class="method-content">
                <h3>Community Support</h3>
                <p>Ask questions in <a href="/ask">/ask</a> for community help</p>
              </div>
            </div>

            <div class="contact-method">
              <div class="method-icon">üìù</div>
              <div class="method-content">
                <h3>Report Content</h3>
                <p>Use the "Report" button on posts/comments that violate rules</p>
              </div>
            </div>

            <div class="contact-method">
              <div class="method-icon">üìö</div>
              <div class="method-content">
                <h3>FAQ</h3>
                <p>Check our <a href="/faq">FAQ page</a> for common questions</p>
              </div>
            </div>

            <div class="contact-method">
              <div class="method-icon">üìú</div>
              <div class="method-content">
                <h3>Guidelines</h3>
                <p>Read our <a href="/guidelines">posting guidelines</a> and <a href="/rules">community rules</a></p>
              </div>
            </div>
          </div>

          <div class="response-time">
            <h3>Response Time</h3>
            <p>We typically respond within 24-48 hours. For urgent moderation issues, use the report button for faster action.</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 1rem;
  }

  .page-header {
    background: white;
    border: 1px solid var(--border);
    padding: 2rem;
    margin-bottom: 1.5rem;
    border-radius: 0.5rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 900;
    margin: 0 0 0.5rem 0;
  }

  .page-header p {
    font-size: 1rem;
    color: #666;
    margin: 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 1.5rem;
  }

  .contact-form-section,
  .contact-info-section {
    background: white;
    border: 1px solid var(--border);
    padding: 2rem;
    border-radius: 0.5rem;
  }

  .contact-form-section h2,
  .contact-info-section h2 {
    font-size: 1.5rem;
    font-weight: 900;
    margin: 0 0 1.5rem 0;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-group label {
    display: block;
    font-weight: 700;
    font-size: 0.9375rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--border);
    border-radius: 0.375rem;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--brand);
  }

  .submit-btn {
    width: 100%;
    background: var(--brand);
    color: white;
    padding: 0.875rem;
    border: none;
    border-radius: 0.375rem;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .contact-method {
    display: flex;
    gap: 1rem;
    align-items: start;
  }

  .method-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .method-content h3 {
    font-size: 1rem;
    font-weight: 900;
    margin: 0 0 0.25rem 0;
  }

  .method-content p {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  .method-content a {
    color: var(--brand);
    font-weight: 700;
    text-decoration: none;
  }

  .response-time {
    background: #f9f9f9;
    padding: 1.25rem;
    border-radius: 0.375rem;
    border: 1px solid #e0e0e0;
  }

  .response-time h3 {
    font-size: 1rem;
    font-weight: 900;
    margin: 0 0 0.5rem 0;
  }

  .response-time p {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .contact-container {
      padding: 0.5rem;
      margin: 1rem auto;
    }

    .page-header {
      padding: 1.5rem;
    }

    .page-header h1 {
      font-size: 1.5rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-form-section,
    .contact-info-section {
      padding: 1.5rem;
    }
  }
</style>
