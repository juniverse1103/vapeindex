---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { ChevronUp, ChevronDown, MessageSquare, Eye, Share2, Bookmark } from 'lucide-astro';

const { slug } = Astro.params;
const sort = Astro.url.searchParams.get('sort') || 'hot';
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:51728';

let board: any = null;
let posts: any[] = [];
let error = null;

try {
  // Fetch board info
  const boardsRes = await fetch(`${API_URL}/api/boards`);
  if (boardsRes.ok) {
    const boards = await boardsRes.json();
    board = boards.find((b: any) => b.slug === slug);
  }

  if (!board) {
    error = 'Board not found';
  } else {
    // Fetch posts for this board with sorting
    const postsRes = await fetch(`${API_URL}/api/posts?board=${slug}&sort=${sort}&limit=20`);
    if (postsRes.ok) {
      posts = await postsRes.json();
    }
  }
} catch (e) {
  error = 'Failed to load board';
}
---

<Layout title={board ? `b/${board.slug}` : 'Board'}>
  <Header />

  <main class="main-content">
    {error ? (
      <div class="error-container">
        <h2>Error</h2>
        <p>{error}</p>
        <a href="/">‚Üê Back to home</a>
      </div>
    ) : board && (
      <div class="board-container">
        <!-- Board Header -->
        <div class="board-header" style={`border-left: 4px solid ${board.color}`} data-board-slug={board.slug}>
          <div class="board-info">
            <h1>b/{board.slug}</h1>
            <p class="board-description">{board.description}</p>
            <div class="board-stats">
              <span>{board.posts.toLocaleString()} posts</span>
              <span>‚Ä¢</span>
              <span>{board.members.toLocaleString()} members</span>
              <span>‚Ä¢</span>
              <span id="subscriber-count">{board.subscribers ? board.subscribers.toLocaleString() : '0'} subscribers</span>
            </div>
          </div>
          <div class="board-actions">
            <button id="subscribe-btn" class="subscribe-btn" data-subscribed="false">
              <span class="subscribe-text">Subscribe</span>
              <span class="unsubscribe-text">Subscribed</span>
            </button>
            <a href="/submit" class="submit-btn">+ Submit Post</a>
          </div>
        </div>

        <!-- Filter Bar -->
        <div class="filter-bar">
          <div class="filter-tabs">
            <a href={`/b/${slug}`} class={`filter-tab ${sort === 'hot' ? 'active' : ''}`}>hot</a>
            <a href={`/b/${slug}?sort=new`} class={`filter-tab ${sort === 'new' ? 'active' : ''}`}>new</a>
            <a href={`/b/${slug}?sort=top`} class={`filter-tab ${sort === 'top' ? 'active' : ''}`}>top</a>
            <a href={`/b/${slug}?sort=rising`} class={`filter-tab ${sort === 'rising' ? 'active' : ''}`}>rising</a>
          </div>
        </div>

        <!-- Posts List -->
        {posts.length === 0 ? (
          <div class="no-posts">
            <p>No posts yet in this board</p>
            <a href="/submit" class="submit-link">Be the first to post!</a>
          </div>
        ) : (
          <div class="posts-container">
            {posts.map((post) => (
              <article class="post-card">
                <!-- Voting Column -->
                <div class="vote-column">
                  <button class="vote-btn vote-up" aria-label="Upvote">
                    <ChevronUp size={16} />
                  </button>
                  <span class="vote-score">{post.score}</span>
                  <button class="vote-btn vote-down" aria-label="Downvote">
                    <ChevronDown size={16} />
                  </button>
                </div>

                <!-- Content Column -->
                <div class="post-content">
                  <!-- Meta Info -->
                  <div class="post-meta">
                    <span class="post-author">
                      <a href={`/user/${post.author}`} class="author-link">u/{post.author}</a>
                      <span class="author-karma">{post.authorKarma.toLocaleString()}</span>
                    </span>
                    <span class="meta-separator">‚Ä¢</span>
                    <time class="post-time">{post.time}</time>
                    {post.hot && <span class="badge badge-hot">üî• HOT</span>}
                    {post.awarded && <span class="badge badge-award">‚≠ê</span>}
                  </div>

                  <!-- Title -->
                  <h2 class="post-title">
                    <a href={`/post/${post.id}`}>{post.title}</a>
                  </h2>

                  <!-- Actions -->
                  <div class="post-actions">
                    <a href={`/post/${post.id}`} class="action-btn action-comment">
                      <MessageSquare size={14} />
                      <span>{post.comments}</span>
                    </a>
                    <span class="action-btn action-views">
                      <Eye size={14} />
                      <span>{post.views.toLocaleString()}</span>
                    </span>
                    <button class="action-btn action-share">
                      <Share2 size={14} />
                      <span>Share</span>
                    </button>
                    <button class="action-btn action-save">
                      <Bookmark size={14} />
                      <span>Save</span>
                    </button>
                  </div>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    )}
  </main>
</Layout>

<style>
  .main-content { background: var(--bg-secondary); min-height: 100vh; padding: 1rem; }
  .error-container { text-align: center; padding: 4rem 2rem; }
  .error-container h2 { font-size: 1.5rem; margin-bottom: 1rem; }
  .error-container a { color: var(--brand); text-decoration: none; }

  .board-container { max-width: 800px; margin: 0 auto; }

  .board-header {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    padding: 2rem;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 1rem;
  }

  .board-info { flex: 1; }
  .board-info h1 { font-size: 2rem; margin: 0 0 0.5rem 0; color: var(--text-primary); }
  .board-description { font-size: 0.9375rem; color: var(--text-secondary); margin: 0 0 1rem 0; line-height: 1.5; }
  .board-stats { display: flex; gap: 0.5rem; font-size: 0.875rem; color: var(--text-secondary); font-weight: 600; }

  .board-actions { display: flex; gap: 0.75rem; align-items: center; }

  .subscribe-btn {
    background: transparent;
    border: 2px solid var(--brand);
    color: var(--brand);
    padding: 0.625rem 1.25rem;
    font-weight: 600;
    font-size: 0.875rem;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .subscribe-btn:hover { background: var(--brand); color: white; }

  .subscribe-btn[data-subscribed="false"] .unsubscribe-text { display: none; }
  .subscribe-btn[data-subscribed="true"] .subscribe-text { display: none; }
  .subscribe-btn[data-subscribed="true"] {
    background: var(--brand);
    color: white;
  }
  .subscribe-btn[data-subscribed="true"]:hover {
    background: transparent;
    color: var(--brand);
  }

  .submit-btn {
    background: var(--brand);
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.875rem;
    white-space: nowrap;
    transition: opacity 0.2s;
  }
  .submit-btn:hover { opacity: 0.9; }

  .filter-bar {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    padding: 0.75rem 1.5rem;
    margin-bottom: 1rem;
  }

  .filter-tabs { display: flex; gap: 1rem; }
  .filter-tab {
    color: var(--text-tertiary);
    text-decoration: none;
    font-weight: 400;
    font-size: 0.8125rem;
    transition: color 0.1s ease;
  }
  .filter-tab.active { color: var(--text-primary); font-weight: 600; }
  .filter-tab:hover { color: var(--brand); }

  .no-posts {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    padding: 4rem 2rem;
    text-align: center;
  }
  .no-posts p { font-size: 1.125rem; color: var(--text-secondary); margin-bottom: 1rem; }
  .submit-link { color: var(--brand); text-decoration: none; font-weight: 600; }

  .posts-container { display: flex; flex-direction: column; gap: 0; }

  @media (max-width: 768px) {
    .board-header {
      flex-direction: column;
      padding: 1.5rem;
    }
    .board-actions {
      width: 100%;
      flex-direction: column;
    }
    .subscribe-btn,
    .submit-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  import { isAuthenticated } from '../../lib/auth';

  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:51728';
  const subscribeBtn = document.getElementById('subscribe-btn') as HTMLButtonElement;
  const subscriberCount = document.getElementById('subscriber-count');
  const boardHeader = document.querySelector('.board-header');
  const boardSlug = boardHeader?.getAttribute('data-board-slug');

  // Check subscription status on page load
  async function checkSubscription() {
    if (!isAuthenticated() || !boardSlug) {
      subscribeBtn.style.display = 'none';
      return;
    }

    try {
      const token = localStorage.getItem('auth_token');
      const response = await fetch(`${API_URL}/api/boards/${boardSlug}/subscription`, {
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (response.ok) {
        const data = await response.json();
        updateSubscriptionUI(data.subscribed);
      }
    } catch (error) {
      console.error('Failed to check subscription:', error);
    }
  }

  // Update UI based on subscription status
  function updateSubscriptionUI(subscribed: boolean) {
    if (subscribeBtn) {
      subscribeBtn.setAttribute('data-subscribed', String(subscribed));
    }
  }

  // Handle subscribe/unsubscribe
  async function toggleSubscription() {
    if (!isAuthenticated()) {
      window.location.href = '/login';
      return;
    }

    if (!boardSlug) return;

    const isSubscribed = subscribeBtn.getAttribute('data-subscribed') === 'true';
    const token = localStorage.getItem('auth_token');

    try {
      const response = await fetch(`${API_URL}/api/boards/${boardSlug}/subscribe`, {
        method: isSubscribed ? 'DELETE' : 'POST',
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (response.ok) {
        updateSubscriptionUI(!isSubscribed);

        // Update subscriber count
        if (subscriberCount) {
          const currentCount = parseInt(subscriberCount.textContent?.replace(/[^0-9]/g, '') || '0');
          const newCount = isSubscribed ? currentCount - 1 : currentCount + 1;
          subscriberCount.textContent = `${newCount.toLocaleString()} subscribers`;
        }
      } else {
        const error = await response.json();
        alert(error.error || 'Failed to update subscription');
      }
    } catch (error) {
      console.error('Subscription error:', error);
      alert('Failed to update subscription');
    }
  }

  // Add click listener
  subscribeBtn?.addEventListener('click', toggleSubscription);

  // Check subscription on page load
  checkSubscription();
</script>
