<style>
  .legal-container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 1rem;
  }

  .page-header {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: 0;
    text-align: center;
  }

  .page-header h1 {
    font-size: 1.25rem;
    font-weight: 900;
    margin: 0 0 0.5rem 0;
  }

  .page-header p {
    font-size: 0.875rem;
    color: var(--text-tertiary);
    margin: 0;
  }

  .legal-content {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    padding: 2.5rem;
    border-radius: 0;
  }

  .legal-section {
    margin-bottom: 2.5rem;
  }

  .legal-section:last-child {
    margin-bottom: 0;
  }

  .legal-section h2 {
    font-size: 1.25rem;
    font-weight: 900;
    margin: 0 0 1rem 0;
    color: var(--brand);
  }

  .legal-section h3 {
    font-size: 1.125rem;
    font-weight: 800;
    margin: 1.25rem 0 0.75rem 0;
  }

  .legal-section p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0 0 1rem 0;
  }

  .legal-section ul {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.8;
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .legal-section li {
    margin-bottom: 0.5rem;
  }

  .legal-section a {
    color: var(--brand);
    font-weight: 700;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .legal-container {
      padding: 0.5rem;
      margin: 1rem auto;
    }

    .page-header {
      padding: 0.75rem;
    }

    .page-header h1 {
      font-size: 1.25rem;
    }

    .legal-content {
      padding: 0.75rem;
    }

    .legal-section h2 {
      font-size: 1.25rem;
    }
  }
</style>
