---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import LoginForm from '../components/auth/LoginForm.astro';
---

<Layout title="Login - VapeIndex">
  <Header />

  <main class="main-content">
    <div class="login-container">
      <div class="login-box">
        <div class="login-header">
          <div class="logo-large">V</div>
          <h1>Welcome to VapeIndex</h1>
          <p>Join the vaping community</p>
        </div>

        <form class="login-form">
          <div class="form-group">
            <label for="email">Email or Username</label>
            <input type="text" id="email" name="email" placeholder="Enter your email" required />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required />
          </div>

          <div class="form-options">
            <label class="checkbox-label">
              <input type="checkbox" name="remember" />
              <span>Remember me</span>
            </label>
            <a href="/forgot-password" class="forgot-link">Forgot password?</a>
          </div>

          <button type="submit" class="login-btn">Log In</button>
        </form>

        <div class="divider">
          <span>or</span>
        </div>

        <div class="social-login">
          <button class="social-btn google-btn">
            <svg width="18" height="18" viewBox="0 0 24 24">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
            </svg>
            Continue with Google
          </button>
          <button class="social-btn github-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            Continue with GitHub
          </button>
        </div>

        <div class="signup-prompt">
          Don't have an account? <a href="/signup" class="signup-link">Sign up</a>
        </div>
      </div>

      <div class="features-box">
        <h3>Why join VapeIndex?</h3>
        <ul class="features-list">
          <li>
            <span class="feature-icon">‚úÖ</span>
            <div>
              <strong>Authentic Product Verification</strong>
              <p>Get help verifying real vs fake vapes</p>
            </div>
          </li>
          <li>
            <span class="feature-icon">üí¨</span>
            <div>
              <strong>Community Support</strong>
              <p>Ask questions and get expert advice</p>
            </div>
          </li>
          <li>
            <span class="feature-icon">üí∞</span>
            <div>
              <strong>Deal Alerts</strong>
              <p>Never miss a sale or price drop</p>
            </div>
          </li>
          <li>
            <span class="feature-icon">‚≠ê</span>
            <div>
              <strong>Reviews & Ratings</strong>
              <p>Read honest reviews from real users</p>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </main>
</Layout>

<style>
  .login-container {
    max-width: 1000px;
    margin: 2rem auto;
    padding: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .login-box {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    border-radius: 0;
    padding: 2.5rem;
  }

  .login-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .logo-large {
    background: var(--brand);
    width: 60px;
    height: 60px;
    margin: 0 auto 1rem;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.25rem;
    color: white;
  }

  .login-header h1 {
    font-size: 1.75rem;
    font-weight: 900;
    margin: 0 0 0.5rem 0;
  }

  .login-header p {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-group label {
    display: block;
    font-weight: 700;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }

  .form-group input {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--border);
    border-radius: 0;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--brand);
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .forgot-link {
    color: var(--brand);
    text-decoration: none;
    font-weight: 600;
  }

  .login-btn {
    width: 100%;
    background: var(--brand);
    color: white;
    padding: 0.875rem;
    border: none;
    border-radius: 0;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
  }

  .divider {
    text-align: center;
    margin: 1.5rem 0;
    position: relative;
  }

  .divider::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    height: 1px;
    background: var(--border);
  }

  .divider span {
    background: var(--bg-elevated);
    padding: 0 1rem;
    color: var(--text-tertiary);
    font-size: 0.875rem;
    position: relative;
    z-index: 1;
  }

  .social-login {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-btn {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--border);
    background: var(--bg-elevated);
    border-radius: 0;
    font-weight: 700;
    font-size: 0.9375rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .social-btn:hover {
    background: var(--bg-secondary);
  }

  .signup-prompt {
    text-align: center;
    margin-top: 1.5rem;
    font-size: 0.9375rem;
    color: var(--text-secondary);
  }

  .signup-link {
    color: var(--brand);
    text-decoration: none;
    font-weight: 700;
  }

  .features-box {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    border-radius: 0;
    padding: 1rem;
  }

  .features-box h3 {
    font-size: 1.25rem;
    font-weight: 900;
    margin: 0 0 1.5rem 0;
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .features-list li {
    display: flex;
    gap: 1rem;
    align-items: start;
  }

  .feature-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .features-list strong {
    display: block;
    font-weight: 700;
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .features-list p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .login-container {
      grid-template-columns: 1fr;
      padding: 0.5rem;
      margin: 1rem auto;
    }

    .login-box {
      padding: 0.75rem;
    }

    .features-box {
      padding: 0.75rem;
    }
  }
</style>
