---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

const boards = [
  { name: 'Disposables', slug: 'disposables' },
  { name: 'Pod Systems', slug: 'pods' },
  { name: 'Dry Herb', slug: 'dryherb' },
  { name: 'Mods & Tanks', slug: 'mods' },
  { name: 'Deals', slug: 'deals' },
  { name: 'Reviews', slug: 'reviews' },
  { name: 'DIY', slug: 'diy' },
  { name: 'Beginner', slug: 'beginner' },
];
---

<Layout title="Create Post - VapeIndex">
  <Header />

  <main class="main-content">
    <div class="submit-container">
      <div class="submit-header">
        <h1>Create a Post</h1>
        <p>Share your thoughts, questions, or discoveries with the community</p>
      </div>

      <div class="submit-layout">
        <!-- Main Form -->
        <div class="submit-form">
          <!-- Post Type Tabs -->
          <div class="post-type-tabs">
            <button class="type-tab active" data-type="text">
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M2 3h12v2H2V3zm0 4h12v2H2V7zm0 4h8v2H2v-2z"/>
              </svg>
              <span>Text</span>
            </button>
            <button class="type-tab" data-type="link">
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M7.775 3.275a.75.75 0 001.06 1.06l1.25-1.25a2 2 0 112.83 2.83l-2.5 2.5a2 2 0 01-2.83 0 .75.75 0 00-1.06 1.06 3.5 3.5 0 004.95 0l2.5-2.5a3.5 3.5 0 00-4.95-4.95l-1.25 1.25z"/>
              </svg>
              <span>Link</span>
            </button>
            <button class="type-tab" data-type="image">
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M14 2H2a1 1 0 00-1 1v10a1 1 0 001 1h12a1 1 0 001-1V3a1 1 0 00-1-1zM5.5 8.5a1.5 1.5 0 110-3 1.5 1.5 0 010 3zm7.5 4H3l3-4 2 2 2-3 3 5z"/>
              </svg>
              <span>Image</span>
            </button>
            <button class="type-tab" data-type="poll">
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M2 2h3v12H2V2zm5 3h3v9H7V5zm5 4h2v5h-2V9z"/>
              </svg>
              <span>Poll</span>
            </button>
          </div>

          <!-- Form Content -->
          <div class="form-content">
            <!-- Board Selection -->
            <div class="form-group">
              <label for="board">Choose a board</label>
              <select id="board" class="form-select" required>
                <option value="">Select a board...</option>
                {boards.map(board => (
                  <option value={board.slug}>b/{board.slug}</option>
                ))}
              </select>
            </div>

            <!-- Title -->
            <div class="form-group">
              <label for="title">Title</label>
              <input
                type="text"
                id="title"
                class="form-input"
                placeholder="An interesting title goes here"
                maxlength="300"
                required
              />
              <div class="char-counter">
                <span id="title-count">0</span>/300
              </div>
            </div>

            <!-- Text Content (default) -->
            <div class="form-group" id="text-content">
              <label for="content">Text (optional)</label>
              <textarea
                id="content"
                class="form-textarea"
                placeholder="What's on your mind?"
                rows="12"
              ></textarea>
              <div class="editor-toolbar">
                <button type="button" class="toolbar-btn" title="Bold">
                  <strong>B</strong>
                </button>
                <button type="button" class="toolbar-btn" title="Italic">
                  <em>I</em>
                </button>
                <button type="button" class="toolbar-btn" title="Link">
                  üîó
                </button>
                <button type="button" class="toolbar-btn" title="List">
                  ‚â°
                </button>
              </div>
            </div>

            <!-- Link Content (hidden by default) -->
            <div class="form-group" id="link-content" style="display: none;">
              <label for="url">URL</label>
              <input
                type="url"
                id="url"
                class="form-input"
                placeholder="https://example.com"
              />
            </div>

            <!-- Image Content (hidden by default) -->
            <div class="form-group" id="image-content" style="display: none;">
              <label for="image">Upload Image</label>
              <div class="upload-area">
                <input type="file" id="image" accept="image/*" hidden />
                <label for="image" class="upload-label">
                  <svg width="48" height="48" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M8 1a1 1 0 011 1v5h5a1 1 0 110 2H9v5a1 1 0 11-2 0V9H2a1 1 0 110-2h5V2a1 1 0 011-1z"/>
                  </svg>
                  <span>Click to upload or drag and drop</span>
                  <small>PNG, JPG, GIF up to 10MB</small>
                </label>
              </div>
            </div>

            <!-- Poll Content (hidden by default) -->
            <div class="form-group" id="poll-content" style="display: none;">
              <label>Poll Options</label>
              <div class="poll-options">
                <input type="text" class="form-input" placeholder="Option 1" />
                <input type="text" class="form-input" placeholder="Option 2" />
              </div>
              <button type="button" class="btn-add-option">+ Add Option</button>
            </div>

            <!-- Tags -->
            <div class="form-group">
              <label for="tags">Tags (optional)</label>
              <input
                type="text"
                id="tags"
                class="form-input"
                placeholder="Add tags separated by commas"
              />
              <small class="help-text">Help others find your post</small>
            </div>

            <!-- NSFW Toggle -->
            <div class="form-group">
              <label class="checkbox-label">
                <input type="checkbox" id="nsfw" />
                <span>Mark as NSFW</span>
              </label>
            </div>

            <!-- Spoiler Toggle -->
            <div class="form-group">
              <label class="checkbox-label">
                <input type="checkbox" id="spoiler" />
                <span>Mark as Spoiler</span>
              </label>
            </div>

            <!-- Submit Buttons -->
            <div class="form-actions">
              <button type="button" class="btn-secondary">Save Draft</button>
              <button type="submit" class="btn-submit">Post</button>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="submit-sidebar">
          <!-- Guidelines Card -->
          <div class="sidebar-card">
            <h3>üìã Posting Guidelines</h3>
            <ul class="guidelines-list">
              <li>Be respectful and civil</li>
              <li>No spam or self-promotion</li>
              <li>Use descriptive titles</li>
              <li>Verify product authenticity</li>
              <li>No selling or trading</li>
            </ul>
          </div>

          <!-- Tips Card -->
          <div class="sidebar-card tips-card">
            <h3>üí° Tips for Success</h3>
            <ul class="tips-list">
              <li><strong>Use a clear title:</strong> Make it descriptive and specific</li>
              <li><strong>Add details:</strong> More context = better responses</li>
              <li><strong>Choose the right board:</strong> Post in the most relevant community</li>
              <li><strong>Include images:</strong> Visual content gets more engagement</li>
            </ul>
          </div>

          <!-- Preview Card -->
          <div class="sidebar-card">
            <h3>üëÅ Preview</h3>
            <div class="preview-area">
              <p class="preview-empty">Your post will preview here</p>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>
</Layout>

<style>
  .submit-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .submit-header {
    margin-bottom: 2rem;
  }

  .submit-header h1 {
    font-size: 2rem;
    font-weight: 900;
    margin: 0 0 0.5rem 0;
  }

  .submit-header p {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .submit-layout {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 1.5rem;
  }

  .submit-form {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .post-type-tabs {
    display: flex;
    border-bottom: 2px solid #f0f0f0;
  }

  .type-tab {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.375rem;
    padding: 1rem;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s ease;
    position: relative;
  }

  .type-tab:hover {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .type-tab.active {
    color: var(--brand);
    background: rgba(124, 58, 237, 0.05);
  }

  .type-tab.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--brand);
  }

  .type-tab span {
    font-size: 0.875rem;
    font-weight: 700;
  }

  .form-content {
    padding: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--border);
    border-radius: 0.375rem;
    font-size: 0.9375rem;
    font-family: inherit;
    transition: border-color 0.15s ease;
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--brand);
  }

  .form-textarea {
    resize: vertical;
    min-height: 200px;
  }

  .char-counter {
    text-align: right;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    margin-top: 0.25rem;
  }

  .editor-toolbar {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid var(--divider);
  }

  .toolbar-btn {
    padding: 0.375rem 0.75rem;
    background: var(--bg-hover);
    border: none;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    cursor: pointer;
    transition: background 0.15s ease;
  }

  .toolbar-btn:hover {
    background: #e0e0e0;
  }

  .upload-area {
    border: 2px dashed var(--border);
    border-radius: 0.5rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.15s ease;
  }

  .upload-area:hover {
    border-color: var(--brand);
    background: rgba(124, 58, 237, 0.02);
  }

  .upload-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
  }

  .upload-label svg {
    color: var(--text-tertiary);
  }

  .upload-label span {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .upload-label small {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  .poll-options {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .btn-add-option {
    background: var(--bg-hover);
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 600;
    cursor: pointer;
    align-self: flex-start;
  }

  .help-text {
    display: block;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    margin-top: 0.25rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .checkbox-label input {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .form-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--divider);
  }

  .btn-secondary,
  .btn-submit {
    padding: 0.75rem 2rem;
    border-radius: 0.375rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .btn-secondary {
    background: var(--bg-elevated);
    border: 2px solid var(--border);
    color: var(--text-secondary);
  }

  .btn-secondary:hover {
    border-color: var(--text-tertiary);
    color: var(--text-primary);
  }

  .btn-submit {
    background: var(--brand);
    border: none;
    color: white;
  }

  .btn-submit:hover {
    background: var(--brand-dark);
  }

  .submit-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .sidebar-card {
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    border-radius: 0.5rem;
    padding: 1.25rem;
  }

  .sidebar-card h3 {
    font-size: 0.9375rem;
    font-weight: 800;
    margin: 0 0 1rem 0;
  }

  .guidelines-list,
  .tips-list {
    margin: 0;
    padding-left: 1.25rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .guidelines-list li,
  .tips-list li {
    margin-bottom: 0.5rem;
  }

  .tips-card {
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.03) 0%, rgba(236, 72, 153, 0.03) 100%);
  }

  .preview-area {
    min-height: 150px;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 0.375rem;
  }

  .preview-empty {
    color: var(--text-tertiary);
    font-size: 0.875rem;
    text-align: center;
    margin: 2rem 0;
  }

  @media (max-width: 1024px) {
    .submit-layout {
      grid-template-columns: 1fr;
    }

    .submit-sidebar {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .submit-container {
      padding: 1rem;
    }

    .submit-header h1 {
      font-size: 1.5rem;
    }

    .post-type-tabs {
      flex-wrap: wrap;
    }

    .type-tab {
      flex-basis: 50%;
    }

    .form-content {
      padding: 1rem;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn-secondary,
    .btn-submit {
      width: 100%;
    }
  }
</style>

<script>
  // Tab switching
  document.querySelectorAll('.type-tab').forEach(tab => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.type-tab').forEach(t => t.classList.remove('active'));
      tab.classList.add('active');

      // Hide all content types
      document.querySelectorAll('[id$="-content"]').forEach(el => {
        (el as HTMLElement).style.display = 'none';
      });

      // Show selected content type
      const type = tab.getAttribute('data-type');
      const contentEl = document.getElementById(`${type}-content`);
      if (contentEl) {
        contentEl.style.display = 'block';
      }
    });
  });

  // Character counter
  const titleInput = document.getElementById('title') as HTMLInputElement;
  const titleCount = document.getElementById('title-count');

  if (titleInput && titleCount) {
    titleInput.addEventListener('input', () => {
      titleCount.textContent = titleInput.value.length.toString();
    });
  }
</script>
